<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners_white"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical"
    android:gravity="center"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/button_rounded_corners_comment">
        <TextView
            android:id="@+id/comment_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="XRabell"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Дата"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginStart="15dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/btn_comment_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:minWidth="20dp"

            android:background="@drawable/ic_close_white"
            android:visibility="visible"
            android:alpha="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/comment_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "8dp"
        android:paddingHorizontal="8dp"
        android:maxLines="2"
        android:textSize="14dp"
        android:text="TEXT ANSWER"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="description description descrription description description escription description description description"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_gravity="left"
            android:layout_marginTop = "8dp"
            android:paddingHorizontal="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="12dp">

            <TextView
                android:id="@+id/comment_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="1"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:layout_marginStart="15dp" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <ImageButton
                android:id="@+id/btn_edit_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:minWidth="30dp"
                android:background="@drawable/ic_change_account"
                android:alpha="1" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.3" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:minWidth="30dp"
                android:background="@drawable/ic_like"
                android:alpha="0.5" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.2" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:minWidth="30dp"
                android:background="@drawable/ic_dislike"
                android:alpha="0.5"/>

        </LinearLayout>

    </LinearLayout>


    <!-- <ImageView
         android:id="@+id/likedImageView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginEnd="15dp"
         android:src="@drawable/ic_change_account"/>

     <ImageView
         android:id="@+id/more"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/ic_menu_camera" />-->

</LinearLayout>